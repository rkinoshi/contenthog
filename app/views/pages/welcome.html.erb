<div class="full-screen row" data-equalizer>
  <div class="left-panel medium-3 columns show-for-medium-up" data-equalizer-watch>
    <div class="sidebox">
      <b>AUTHOR</b><br>
      <%= image_tag("placeholder.png", size: "96x96") %><br>
      <b>Joe Bo Beep</b><br>
      <hr>
      Joe Bo Beep loves the content, on line
    </div>
  </div>
  <div class="small-12 medium-6 columns" data-equalizer-watch>
    <div class="content-post">
      <div class="row content-title">
        EXAMPLES PART II: THE QUEST FOR ANGUS
      </div>
      <hr>
      <div class="row content-author-block valign-middle">
        <div class="small-2 columns">
          <%= image_tag("placeholder.png", size: "96x96") %>
        </div>
